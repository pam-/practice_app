<%= provide(:title, 'Sign in') %>
<div class="wrapper">
	<div class="form">
		<p>SIGN IN</p>
		<%= form_for(:session, url: sessions_path) do |f| %>

			<%= f.label :email %>
			<%= f.text_field :email %>

			<%= f.label :password %>
			<%= f.password_field :password %>

			<%= f.submit "Sign in", class: "button-large" %>
		<% end %>
		<p> New user? <%= link_to "Sign up now!", signup_path %></p>
	</div>
</div>